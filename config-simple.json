{
  "mcpServers": {
    "sequential-thinking": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {
        "WORKING_DIR": ".claude",
        "OPENAI_API_KEY": "your-openai-api-key-here"
      }
    },
    "codex": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@openai/codex", "mcp-server"],
      "env": {
        "WORKING_DIR": ".claude"
      }
    }
  },
  "workflow": {
    "execution_order": [
      "sequential-thinking",
      "codex"
    ],
    "working_directory": ".claude",
    "data_directories": {
      "codex": ".claude/codex",
      "context": ".claude/context",
      "logs": ".claude/logs"
    }
  }
}